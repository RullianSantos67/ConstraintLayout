<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <View
        android:id="@+id/barNetflix"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/red_netflix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNetflix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Netflix"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/barNetflix"
        app:layout_constraintBottom_toBottomOf="@id/barNetflix"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/headerDark"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@color/gray_900"
        app:layout_constraintTop_toBottomOf="@id/barNetflix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heartland"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        app:drawableBottomCompat="@drawable/ic_arrow_down"
        app:layout_constraintTop_toTopOf="@id/headerDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvEpisodio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T10:E08"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/imgPoster"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/serie1"
        app:layout_constraintTop_toBottomOf="@id/headerDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekEp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:thumbTint="@color/red_netflix"
        android:progressTint="@color/red_netflix"
        app:layout_constraintTop_toBottomOf="@id/imgPoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvTempoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekEp"
        app:layout_constraintStart_toStartOf="@id/seekEp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvTempoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40:00"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekEp"
        app:layout_constraintEnd_toEndOf="@id/seekEp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivRewind"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/replay"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTempoAtual"
        app:layout_constraintEnd_toStartOf="@+id/ivPlay"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_play_circle"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTempoAtual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/ivCast"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/video"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTempoAtual"
        app:layout_constraintStart_toEndOf="@id/ivPlay"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
